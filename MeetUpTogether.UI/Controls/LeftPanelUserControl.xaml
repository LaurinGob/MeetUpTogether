<UserControl x:Class="MeetUpTogether.UI.Controls.LeftPanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icon="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="WhiteSmoke">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Command="{Binding AddMeetingCommand}"
                    Width="24" Height="24" Margin="0,0,8,0"
                    Background="#E0E0E0" BorderBrush="#CCCCCC">
                <Viewbox Width="16" Height="16">
                    <icon:PackIcon Kind="Plus"/>
                </Viewbox>
            </Button>
            <Button Command="{Binding RemoveMeetingCommand}"
                    Width="24" Height="24"
                    Background="#E0E0E0" BorderBrush="#CCCCCC">
                <Viewbox Width="16" Height="16">
                    <icon:PackIcon Kind="Minus"/>
                </Viewbox>
            </Button>
        </StackPanel>

        <!-- Meetings List -->
        <ListBox Grid.Row="1" 
        ItemsSource="{Binding MeetingsView}" 
        SelectedItem="{Binding SelectedMeeting}" 
        BorderBrush="#DDD" BorderThickness="1" 
        Padding="5" Background="White">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding From, StringFormat='From: {0:d}'}" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
