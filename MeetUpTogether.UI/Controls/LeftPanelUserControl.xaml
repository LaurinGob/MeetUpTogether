<UserControl x:Class="MeetUpTogether.UI.Controls.LeftPanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:icon="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="WhiteSmoke">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="AddItemButton"
                    Width="24"
                    Height="24"
                    Margin="0,0,8,0"
                    Background="#E0E0E0"
                    BorderBrush="#CCCCCC"
                    Click="AddItemButton_Click">
                <Viewbox Width="16" Height="16">
                    <icon:PackIcon Kind="Plus"/>
                </Viewbox>
            </Button>
            <Button x:Name="RemoveItemButton"
                    Width="24"
                    Height="24"
                    Background="#E0E0E0"
                    BorderBrush="#CCCCCC"
                    Click="RemoveItemButton_Click">
                <Viewbox Width="16" Height="16">
                    <icon:PackIcon Kind="Minus"/>
                </Viewbox>
            </Button>
        </StackPanel>

        <ListBox x:Name="ItemsList"
                 Grid.Row="1"
                 BorderBrush="#DDDDDD"
                 BorderThickness="1"
                 Padding="5"
                 Background="White"
                 SelectionMode="Single"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>