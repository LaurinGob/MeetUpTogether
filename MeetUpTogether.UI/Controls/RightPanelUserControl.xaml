<UserControl x:Class="MeetUpTogether.UI.Controls.RightPanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetUpTogether.UI.Controls"
             xmlns:icon="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" IsEnabled="{Binding IsEditable}">
            <StackPanel>

                <!-- Meeting Title -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Meeting Title" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding CurrentMeeting.Title, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
                </StackPanel>

                <!-- From / To -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel Width="150" Margin="0,0,10,0">
                        <TextBlock Text="From" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding CurrentMeeting.From, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Width="150">
                        <TextBlock Text="To" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding CurrentMeeting.To, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Agenda" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding CurrentMeeting.Agenda, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </StackPanel>

                <!-- Notes List -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Notes" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox Text="{Binding NewNoteText, UpdateSourceTrigger=PropertyChanged}" 
                            Height="30" Width="250" Margin="0,0,8,0"/>
                        <Button Command="{Binding AddNoteCommand}" Width="36" Height="36" Background="#E0E0E0" BorderBrush="#CCCCCC">
                            <Viewbox Width="16" Height="16">
                                <icon:PackIcon Kind="Plus"/>
                            </Viewbox>
                        </Button>
                    </StackPanel>
                    <ListBox ItemsSource="{Binding CurrentMeeting.Notes}" Height="100" BorderBrush="#DDD" BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Content}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Save Meeting Button -->
        <Border Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Bottom" BorderBrush="#DDD">
            <Button Command="{Binding SaveMeetingCommand}" 
                    IsEnabled="{Binding IsEditable}"
                    HorizontalAlignment="Center"
                    Width="40"
                    Height="40"
                    Margin="10"
                    Background="#E0E0E0"
                    BorderBrush="#CCCCCC">
                <Viewbox Width="16" Height="16">
                    <icon:PackIcon Kind="ContentSave" Foreground="#333"/>
                </Viewbox>
            </Button>
        </Border>
    </Grid>
</UserControl>