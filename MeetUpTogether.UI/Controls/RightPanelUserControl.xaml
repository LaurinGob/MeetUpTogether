<UserControl x:Class="MeetUpTogether.UI.Controls.RightPanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetUpTogether.UI.Controls"
             xmlns:icon="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Meeting Title" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="TitleInput" Height="30"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
                <StackPanel Width="150" Margin="0,0,10,0">
                    <TextBlock Text="From" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="FromDate"/>
                </StackPanel>
                <StackPanel Width="150">
                    <TextBlock Text="To" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="ToDate"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Agenda" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="AgendaInput" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <TextBlock Text="Notes" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ListBox x:Name="NotesList" Height="100" BorderBrush="#DDD" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="NewNoteInput" Height="30" Width="250" Margin="0,0,8,0"/>
                <Button x:Name="AddNoteButton" Width="36" Height="36" Background="#E0E0E0" BorderBrush="#CCCCCC" Click="AddNoteButton_Click">
                    <Viewbox Width="16" Height="16">
                        <icon:PackIcon Kind="Plus"/>
                    </Viewbox>
                </Button>
            </StackPanel>

            <Button x:Name="SaveMeetingButton"
                    Grid.Row="5"
                    Content="Save Meeting"
                    Height="36"
                    Background="#E0E0E0"
                    BorderBrush="#CCCCCC"
                    HorizontalAlignment="Right"
                    Width="130"
                    Click="SaveMeetingButton_Click"/>
        </Grid>
    </ScrollViewer>
</UserControl>
