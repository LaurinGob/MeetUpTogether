<UserControl x:Class="MeetUpTogether.UI.Controls.SearchBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icon="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">

    <Grid>
        <Border Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                Height="40"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True">
            <DockPanel LastChildFill="True" VerticalAlignment="Center">
                <Viewbox DockPanel.Dock="Left" Width="20" Height="20" Margin="8,0,0,0" VerticalAlignment="Center">
                    <icon:PackIcon Kind="Magnify" Foreground="#555"/>
                </Viewbox>
                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,5,0"
                     BorderThickness="0"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Background="Transparent"
                     Foreground="#333333"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>