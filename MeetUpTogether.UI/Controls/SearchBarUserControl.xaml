<UserControl x:Class="MeetUpTogether.UI.Controls.SearchBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetUpTogether.UI.Controls"
             xmlns:icon="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <Grid>
        <Border Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                Height="40"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True">

            <DockPanel LastChildFill="True">
                <Button x:Name="SearchButton"
                        DockPanel.Dock="Right"
                        Width="50"
                        Height="38"
                        Background="#E0E0E0"
                        BorderBrush="#BFBFBF"
                        ToolTip="Search"
                        Click="SearchButton_Click"
                        Cursor="Hand">
                    <Viewbox Width="16" Height="16">
                        <icon:PackIcon Kind="Magnify" Foreground="#333333"/>
                    </Viewbox>
                </Button>

                <TextBox x:Name="SearchInput"
                         Margin="8,0,5,0"
                         BorderThickness="0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         Foreground="#333333"
                         KeyDown="SearchInput_KeyDown"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
